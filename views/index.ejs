<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
            <h2 class="text-3xl font-bold leading-7 text-manus-text sm:text-4xl sm:truncate">
                Дашборд аналитики
            </h2>
            <p class="mt-1 text-sm text-gray-500">
                Обзор всех витрин и офферов в реальном времени
            </p>
        </div>
        <div class="mt-4 flex flex-col items-end md:mt-0 md:ml-4">
            <!-- Split Button Group -->
            <div class="inline-flex rounded-md shadow-lg transform transition-transform hover:-translate-y-0.5" role="group">
                <!-- Main Button with Tooltip -->
                <% 
                    let tooltipText = 'Запустить парсинг всех активных витрин';
                    if (lastFullRun && lastFullRun.start_time) {
                        const startTime = new Date(lastFullRun.start_time);
                        const endTime = new Date(lastFullRun.end_time);
                        const duration = Math.round((endTime - startTime) / 1000);
                        const minutes = Math.floor(duration / 60);
                        const seconds = duration % 60;
                        const formattedDate = startTime.toLocaleString('ru-RU', { 
                            day: '2-digit', 
                            month: '2-digit', 
                            year: 'numeric', 
                            hour: '2-digit', 
                            minute: '2-digit' 
                        });
                        tooltipText = `Последний парсинг: ${formattedDate} (${lastFullRun.total_runs} витрин за ${minutes} мин ${seconds} сек)`;
                    }
                %>
                <button 
                    type="button" 
                    onclick="runScraperAll()" 
                    id="runAllBtn" 
                    title="<%= tooltipText %>"
                    class="inline-flex items-center px-5 py-2.5 border border-transparent rounded-l-md text-sm font-semibold text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all cursor-pointer shadow-md">
                    <svg class="w-5 h-5 mr-2 -ml-1 text-blue-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Запустить парсинг всех
                </button>
                
                <!-- Dropdown Button -->
                <div class="relative">
                    <button 
                        type="button" 
                        onclick="toggleDropdown()" 
                        id="dropdownBtn"
                        class="inline-flex items-center px-2 py-2.5 border-l border-blue-800 rounded-r-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all cursor-pointer h-full">
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                        </svg>
                    </button>
                    
                    <!-- Dropdown Menu -->
                    <div id="dropdownMenu" class="hidden absolute right-0 mt-2 w-72 rounded-lg shadow-xl bg-white ring-1 ring-black ring-opacity-5 z-20 origin-top-right transition-all duration-200 divide-y divide-gray-100">
                        <div class="py-1" role="menu">
                            <a href="#" onclick="openSelectiveParsingModal(); return false;" class="group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 transition-colors cursor-pointer" role="menuitem">
                                <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                                </svg>
                                <div>
                                    <p class="font-medium">Выборочный парсинг</p>
                                    <p class="text-xs text-gray-500 mt-0.5 group-hover:text-blue-400">Запуск конкретных витрин</p>
                                </div>
                            </a>
                            <a href="#" onclick="seedTestData(); return false;" class="group flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-700 transition-colors cursor-pointer" role="menuitem">
                                <svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"></path>
                                </svg>
                                <div>
                                    <p class="font-medium">Заполнить тестовые данные</p>
                                    <p class="text-xs text-gray-500 mt-0.5 group-hover:text-blue-400">Генерация за 7 дней</p>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div id="parsingStatus" class="hidden mt-2 text-xs font-medium text-blue-600 animate-pulse">
                Готов к запуску...
            </div>
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-10">
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-100">
            <div class="p-5">
                <dt class="text-sm font-medium text-gray-500 truncate">Всего витрин</dt>
                <dd class="mt-1 text-3xl font-semibold text-manus-text"><%= stats.totalShowcases %></dd>
            </div>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-100">
            <div class="p-5">
                <dt class="text-sm font-medium text-gray-500 truncate">Офферов в базе</dt>
                <dd class="mt-1 text-3xl font-semibold text-manus-text"><%= stats.totalOffers %></dd>
            </div>
        </div>
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-100">
            <div class="p-5">
                <dt class="text-sm font-medium text-gray-500 truncate">Запусков сегодня</dt>
                <dd class="mt-1 text-3xl font-semibold text-green-600"><%= stats.runsToday %></dd>
            </div>
        </div>
        <a href="/logs" class="bg-white overflow-hidden shadow rounded-lg border border-gray-100 hover:border-red-300 transition-all cursor-pointer block">
            <div class="p-5">
                <dt class="text-sm font-medium text-gray-500 truncate">Ошибок за 24ч</dt>
                <dd class="mt-1 text-3xl font-semibold text-red-600"><%= stats.errorsToday %></dd>
            </div>
        </a>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-10">
        <div class="bg-white p-6 shadow rounded-lg border border-gray-100">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Тренд позиций офферов</h3>
            <canvas id="positionsChart"></canvas>
        </div>
        <div class="bg-white p-6 shadow rounded-lg border border-gray-100">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-medium text-gray-900">Топ офферов по витринам</h3>
                <select id="periodFilter" onchange="updateTopOffers()" class="px-3 py-1.5 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="today">Сегодня</option>
                    <option value="7days" selected>7 дней</option>
                    <option value="14days">14 дней</option>
                    <option value="30days">30 дней</option>
                    <option value="month">Текущий месяц</option>
                </select>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Оффер</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ср. Позиция</th>
                            <th class="px-3 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Частота</th>
                        </tr>
                    </thead>
                    <tbody id="topOffersTable" class="bg-white divide-y divide-gray-200">
                        <% avgPos.slice(0, 5).forEach(item => { %>
                        <tr>
                            <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= item.company_name %></td>
                            <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.avg_pos.toFixed(1) %></td>
                            <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500"><%= item.appearances %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Showcases List -->
    <div class="bg-white shadow rounded-lg border border-gray-100 overflow-hidden">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Список витрин</h3>
        </div>
        <ul role="list" class="divide-y divide-gray-200">
            <% showcases.forEach(site => { %>
            <li>
                <div class="px-4 py-4 sm:px-6 hover:bg-gray-50 transition-all">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center space-x-4">
                            <div class="p-2 bg-blue-50 rounded-lg">
                                <svg class="h-6 w-6 text-manus-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-1.343 3-3s-1.343-3-3-3m0 6c-1.657 0-3-1.343-3-3s1.343-3-3-3m0 6V9" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-manus-text truncate"><%= site.name %></p>
                                <p class="text-xs text-gray-400 truncate"><%= site.url %></p>
                            </div>
                        </div>

                        <div class="flex items-center space-x-8">
                            <!-- Дней в работе -->
                            <div class="text-center">
                                <p class="text-xs text-gray-400 uppercase">Дней в работе</p>
                                <p class="text-sm font-semibold text-manus-text"><%= site.days_active || 0 %></p>
                            </div>

                            <!-- Офферов -->
                            <div class="text-center">
                                <p class="text-xs text-gray-400 uppercase">Офферов</p>
                                <p class="text-sm font-semibold text-manus-text"><%= site.last_offers_count || 0 %></p>
                            </div>

                            <!-- Скриншот -->
                            <div class="text-center">
                                <p class="text-xs text-gray-400 uppercase">Скриншот</p>
                                <% 
                                    const hasScreenshot = site.screenshot_path && site.screenshot_path !== '';
                                %>
                                <% if (hasScreenshot) { %>
                                    <svg class="h-5 w-5 text-green-500 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                <% } else { %>
                                    <svg class="h-5 w-5 text-red-400 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                <% } %>
                            </div>

                            <!-- Статус и Переключатель -->
                            <div class="flex items-center space-x-3">
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" <%= site.is_active ? 'checked' : '' %> onchange="toggleShowcase(<%= site.id %>, this.checked)">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none focus:ring-4 focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-manus-accent"></div>
                                </label>
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= site.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <%= site.is_active ? 'Active' : 'Paused' %>
                                </span>
                            </div>

                            <a href="/showcase/<%= site.id %>" class="text-manus-accent hover:underline text-sm font-medium">Подробнее →</a>
                        </div>
                    </div>
                </div>
            </li>
            <% }) %>
        </ul>
    </div>

    <!-- Modal: Selective Parsing -->
    <div id="selectiveParsingModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-11/12 md:w-2/3 lg:w-1/2 shadow-lg rounded-md bg-white">
            <div class="flex justify-between items-center pb-3 border-b">
                <h3 class="text-lg font-medium text-gray-900">Выборочный парсинг</h3>
                <button onclick="closeSelectiveParsingModal()" class="text-gray-400 hover:text-gray-600">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            
            <div class="mt-4">
                <p class="text-sm text-gray-500 mb-4">Выберите витрины для парсинга:</p>
                <div class="max-h-96 overflow-y-auto space-y-2">
                    <% showcases.forEach(site => { %>
                    <label class="flex items-center p-3 hover:bg-gray-50 rounded cursor-pointer">
                        <input type="checkbox" class="showcase-checkbox h-4 w-4 text-blue-600 rounded" value="<%= site.id %>" <%= site.is_active ? 'checked' : '' %>>
                        <span class="ml-3 text-sm font-medium text-gray-900"><%= site.name %></span>
                        <span class="ml-auto text-xs text-gray-400"><%= site.url %></span>
                    </label>
                    <% }) %>
                </div>
            </div>
            
            <div class="flex justify-end space-x-3 mt-5 pt-3 border-t">
                <button onclick="closeSelectiveParsingModal()" class="px-4 py-2 bg-gray-200 text-gray-800 rounded-md hover:bg-gray-300 transition-all">
                    Отмена
                </button>
                <button onclick="runSelectedShowcases()" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-all">
                    Запустить выбранные
                </button>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    async function toggleShowcase(id, isActive) {
        try {
            await fetch(`/api/showcase/${id}/toggle`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ is_active: isActive })
            });
            // Небольшая задержка, чтобы пользователь увидел изменение стейта в UI (label)
            setTimeout(() => window.location.reload(), 300);
        } catch (e) {
            alert('Ошибка при смене статуса');
        }
    }

    // Dropdown Logic
    function toggleDropdown() {
        const menu = document.getElementById('dropdownMenu');
        menu.classList.toggle('hidden');
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
        const dropdownBtn = document.getElementById('dropdownBtn');
        const dropdownMenu = document.getElementById('dropdownMenu');
        if (!dropdownBtn.contains(event.target) && !dropdownMenu.contains(event.target)) {
            dropdownMenu.classList.add('hidden');
        }
    });

    // Modal Logic
    function openSelectiveParsingModal() {
        document.getElementById('selectiveParsingModal').classList.remove('hidden');
        toggleDropdown(); // Close menu
    }

    function closeSelectiveParsingModal() {
        document.getElementById('selectiveParsingModal').classList.add('hidden');
    }

    async function runSelectedShowcases() {
        const checkboxes = document.querySelectorAll('.showcase-checkbox:checked');
        const selectedIds = Array.from(checkboxes).map(cb => cb.value);
        
        if (selectedIds.length === 0) {
            alert('Выберите хотя бы одну витрину');
            return;
        }

        closeSelectiveParsingModal();
        const status = document.getElementById('parsingStatus');
        status.classList.remove('hidden');
        status.innerText = `Запуск парсинга ${selectedIds.length} витрин...`;

        try {
            await fetch('/api/run-selected-showcases', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ showcase_ids: selectedIds })
            });
            
            status.innerText = 'Парсинг выбранных витрин завершен!';
            setTimeout(() => window.location.reload(), 1000);
        } catch (e) {
            alert('Ошибка при парсинге');
            console.error(e);
        }
    }

    async function seedTestData() {
        if (!confirm('Вы уверены? Это добавит тестовые данные за 7 дней.')) return;
        
        toggleDropdown();
        try {
            await fetch('/api/seed-test-data', { method: 'POST' });
            alert('Тестовые данные успешно добавлены!');
            window.location.reload();
        } catch (e) {
            alert('Ошибка генерации данных');
            console.error(e);
        }
    }

    async function runScraperAll() {
        const btn = document.getElementById('runAllBtn');
        const status = document.getElementById('parsingStatus');
        
        btn.disabled = true;
        btn.style.opacity = '0.5';
        status.classList.remove('hidden');
        
        try {
            // 1. Получаем список витрин
            status.innerText = 'Получение списка витрин...';
            const sitesRes = await fetch('/api/showcases/active');
            const sites = await sitesRes.json();
            
            // 2. Парсим по очереди
            for (let i = 0; i < sites.length; i++) {
                const site = sites[i];
                status.innerText = `Парсинг [${i+1}/${sites.length}]: ${site.name}...`;
                
                await fetch(`/api/run-showcase/${site.id}`, { method: 'POST' });
            }
            
            status.innerText = 'Парсинг успешно завершен!';
            status.classList.remove('text-blue-600');
            status.classList.add('text-green-600');
            
            setTimeout(() => {
                alert('Все витрины обработаны!');
                window.location.reload();
            }, 500);
            
        } catch (e) {
            alert('Ошибка при выполнении парсинга');
            console.error(e);
        } finally {
            btn.disabled = false;
            btn.style.opacity = '1';
        }
    }

    async function updateTopOffers() {
        const period = document.getElementById('periodFilter').value;
        const tableBody = document.getElementById('topOffersTable');
        
        try {
            const response = await fetch(`/api/top-offers/${period}`);
            const data = await response.json();
            
            if (data.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="3" class="px-3 py-8 text-center text-gray-400 text-sm">Нет данных за выбранный период</td></tr>';
                return;
            }
            
            tableBody.innerHTML = data.map(item => `
                <tr>
                    <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${item.company_name}</td>
                    <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">${item.avg_pos.toFixed(1)}</td>
                    <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">${item.appearances}</td>
                </tr>
            `).join('');
        } catch (e) {
            console.error('Ошибка при загрузке данных:', e);
            tableBody.innerHTML = '<tr><td colspan="3" class="px-3 py-8 text-center text-red-400 text-sm">Ошибка загрузки данных</td></tr>';
        }
    }

    // Chart Logic
    const rawData = <%- JSON.stringify(globalHistory) %>;
    const weekDays = ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'];
    
    // Подготовка данных: создаем массив за последние 7 дней (даже если не было парсинга)
    const labels = [];
    const values = [];
    const today = new Date();
    
    for (let i = 6; i >= 0; i--) {
        const d = new Date();
        d.setDate(today.getDate() - i);
        const dayStr = d.toISOString().split('T')[0];
        const dayLabel = weekDays[d.getDay()];
        
        labels.push(dayLabel);
        
        const entry = rawData.find(r => r.run_day === dayStr);
        values.push(entry ? entry.avg_pos : null); // null создаст разрыв или пропуск (лучше для честности)
    }

    const ctx = document.getElementById('positionsChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Средняя позиция',
                data: values,
                borderColor: '#0066CC',
                backgroundColor: 'rgba(0, 102, 204, 0.1)',
                fill: true,
                tension: 0.4,
                spanGaps: true // Соединяет точки через пустые дни
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false }
            },
            scales: {
                y: { 
                    reverse: true, 
                    min: 1,
                    ticks: { stepSize: 1 }
                }
            }
        }
    });
</script>

</body>
</html>
