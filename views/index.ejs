<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Utility: Async Pool for frontend
    async function asyncPool(concurrency, array, iteratorFn) {
        const ret = [];
        const executing = new Set();
        for (const item of array) {
            const p = Promise.resolve().then(() => iteratorFn(item, array));
            ret.push(p);
            executing.add(p);
            const clean = () => executing.delete(p);
            p.then(clean).catch(clean);
            if (executing.size >= concurrency) {
                await Promise.race(executing);
            }
        }
        return Promise.all(ret);
    }

    async function toggleShowcase(id, isActive) {
        try {
            await fetch(`/api/showcase/${id}/toggle`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ is_active: isActive })
            });
            // Небольшая задержка, чтобы пользователь увидел изменение стейта в UI (label)
            setTimeout(() => window.location.reload(), 300);
        } catch (e) {
            alert('Ошибка при смене статуса');
        }
    }

    // Dropdown Logic
    function toggleDropdown() {
        const menu = document.getElementById('dropdownMenu');
        menu.classList.toggle('hidden');
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function(event) {
        const dropdownBtn = document.getElementById('dropdownBtn');
        const dropdownMenu = document.getElementById('dropdownMenu');
        if (!dropdownBtn.contains(event.target) && !dropdownMenu.contains(event.target)) {
            dropdownMenu.classList.add('hidden');
        }
    });

    // Modal Logic
    function openVersionModal() {
        document.getElementById('versionModal').classList.remove('hidden');
        toggleDropdown();
    }

    function closeVersionModal() {
        document.getElementById('versionModal').classList.add('hidden');
    }

    function runWithSelectedVersion() {
        const version = document.querySelector('input[name="parserVersion"]:checked').value;
        closeVersionModal();
        runScraperAll(version);
    }

    function openSelectiveParsingModal() {
        document.getElementById('selectiveParsingModal').classList.remove('hidden');
        toggleDropdown(); // Close menu
    }

    function closeSelectiveParsingModal() {
        document.getElementById('selectiveParsingModal').classList.add('hidden');
    }

    async function runSelectedShowcases(specificIds = null, version = '<%= VERSIONS.PARSER.STABLE %>') {
        let selectedIds = [];
        
        if (specificIds && Array.isArray(specificIds)) {
            selectedIds = specificIds;
        } else {
            const checkboxes = document.querySelectorAll('.showcase-checkbox:checked');
            selectedIds = Array.from(checkboxes).map(cb => cb.value);
            closeSelectiveParsingModal();
        }
        
        if (selectedIds.length === 0) {
            alert('Выберите хотя бы одну витрину');
            return;
        }

        const statusDiv = document.getElementById('parsingStatus');
        statusDiv.classList.remove('hidden');
        statusDiv.innerHTML = `Запуск парсинга (v${version})...`;

        try {
            const response = await fetch('/api/run-selected-showcases', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ showcase_ids: selectedIds, version: version })
            });
            const data = await response.json();
            
            if (data.success) {
                statusDiv.innerHTML = `✅ Парсинг запущен (v${version})! Обновите страницу через минуту.`;
                setTimeout(() => {
                    statusDiv.classList.add('hidden');
                    // Восстанавливаем иконки для всех запущенных витрин
                    selectedIds.forEach(id => {
                        const playIcon = document.getElementById(`playIcon-${id}`);
                        const loadingIcon = document.getElementById(`loadingIcon-${id}`);
                        const runBtn = document.getElementById(`runBtn-${id}`);
                        if (playIcon && loadingIcon && runBtn) {
                            playIcon.classList.remove('hidden');
                            loadingIcon.classList.add('hidden');
                            runBtn.disabled = false;
                            runBtn.classList.remove('cursor-not-allowed');
                            runBtn.classList.add('hover:text-blue-600');
                        }
                    });
                }, 5000);
            } else {
                statusDiv.innerHTML = '❌ Ошибка запуска';
                // Восстанавливаем иконки при ошибке
                selectedIds.forEach(id => {
                    const playIcon = document.getElementById(`playIcon-${id}`);
                    const loadingIcon = document.getElementById(`loadingIcon-${id}`);
                    const runBtn = document.getElementById(`runBtn-${id}`);
                    if (playIcon && loadingIcon && runBtn) {
                        playIcon.classList.remove('hidden');
                        loadingIcon.classList.add('hidden');
                        runBtn.disabled = false;
                        runBtn.classList.remove('cursor-not-allowed');
                        runBtn.classList.add('hover:text-blue-600');
                    }
                });
                alert('Ошибка: ' + data.error);
            }
        } catch (e) {
            console.error(e);
            statusDiv.innerHTML = '❌ Ошибка сети';
            // Восстанавливаем иконки при ошибке сети
            selectedIds.forEach(id => {
                const playIcon = document.getElementById(`playIcon-${id}`);
                const loadingIcon = document.getElementById(`loadingIcon-${id}`);
                const runBtn = document.getElementById(`runBtn-${id}`);
                if (playIcon && loadingIcon && runBtn) {
                    playIcon.classList.remove('hidden');
                    loadingIcon.classList.add('hidden');
                    runBtn.disabled = false;
                    runBtn.classList.remove('cursor-not-allowed');
                    runBtn.classList.add('hover:text-blue-600');
                }
            });
            alert('Ошибка соединения с сервером');
        }
    }

    function runSingleShowcase(id) {
        if(confirm('Запустить принудительное обновление этой витрины?')) {
            // Показываем анимацию песочных часов
            const playIcon = document.getElementById(`playIcon-${id}`);
            const loadingIcon = document.getElementById(`loadingIcon-${id}`);
            const runBtn = document.getElementById(`runBtn-${id}`);
            
            if (playIcon && loadingIcon && runBtn) {
                playIcon.classList.add('hidden');
                loadingIcon.classList.remove('hidden');
                runBtn.disabled = true;
                runBtn.classList.add('cursor-not-allowed');
                runBtn.classList.remove('hover:text-blue-600');
            }
            
            runSelectedShowcases([id]);
        }
    }

    async function seedTestData() {
        if (!confirm('Вы уверены? Это добавит тестовые данные за 7 дней.')) return;
        
        toggleDropdown();
        try {
            await fetch('/api/seed-test-data', { method: 'POST' });
            alert('Тестовые данные успешно добавлены!');
            window.location.reload();
        } catch (e) {
            alert('Ошибка генерации данных');
            console.error(e);
        }
    }

    async function clearTestData() {
        if (!confirm('Вы уверены? Это удалит ТОЛЬКО тестовые (сгенерированные) данные.\n\nРеальные данные парсинга останутся.')) return;
        
        toggleDropdown();
        try {
            const res = await fetch('/api/clear-test-data', { method: 'POST' });
            const data = await res.json();
            
            if (data.success) {
                alert('Тестовые данные успешно удалены!');
                window.location.reload();
            } else {
                alert('Ошибка удаления: ' + (data.error || 'Неизвестная ошибка'));
            }
        } catch (e) {
            alert('Ошибка соединения с сервером');
            console.error(e);
        }
    }

    async function clearAllData() {
        if (!confirm('ВНИМАНИЕ! Это удалит ВСЕ данные: все офферы и все запуски парсинга.\n\nВитрины останутся нетронутыми.\n\nВы уверены?')) return;
        
        if (!confirm('Это действие НЕОБРАТИМО! Вы действительно хотите удалить все данные?')) return;
        
        toggleDropdown();
        try {
            const res = await fetch('/api/clear-all-data', { method: 'POST' });
            const data = await res.json();
            
            if (data.success) {
                alert('Все данные успешно удалены!');
                window.location.reload();
            } else {
                alert('Ошибка удаления данных: ' + (data.error || 'Неизвестная ошибка'));
            }
        } catch (e) {
            alert('Ошибка соединения с сервером');
            console.error(e);
        }
    }

    // Selector Modal Functions
    function openSelectorModal(btn) {
        const id = btn.getAttribute('data-id');
        const name = btn.getAttribute('data-name');
        const currentSelector = btn.getAttribute('data-selector');

        document.getElementById('modalShowcaseId').value = id;
        document.getElementById('modalShowcaseName').textContent = name;
        document.getElementById('modalSelector').value = currentSelector;
        document.getElementById('selectorModal').classList.remove('hidden');
    }

    function closeSelectorModal() {
        document.getElementById('selectorModal').classList.add('hidden');
    }

    async function saveSelector() {
        const id = document.getElementById('modalShowcaseId').value;
        const htmlElement = document.getElementById('modalSelector').value.trim();
        
        if (!htmlElement) {
            alert('Вставьте HTML-элемент');
            return;
        }
        
        try {
            const res = await fetch(`/api/showcase/${id}/update`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ custom_selector: htmlElement })
            });
            
            if (res.ok) {
                alert('Настройки сохранены');
                window.location.reload();
            } else {
                alert('Ошибка сохранения');
            }
        } catch (e) {
            console.error(e);
            alert('Ошибка сети');
        }
    }

    async function runScraperAll(version = '<%= VERSIONS.PARSER.STABLE %>') {
        const btn = document.getElementById('runAllBtn');
        const status = document.getElementById('parsingStatus');
        
        btn.disabled = true;
        btn.style.opacity = '0.5';
        status.classList.remove('hidden');
        
        try {
            // 1. Получаем список витрин
            status.innerText = `Получение списка витрин (v${version})...`;
            const sitesRes = await fetch('/api/showcases/active');
            const sites = await sitesRes.json();
            
            // 2. Парсим параллельно с лимитом (v1.4)
            const concurrency = <%= app.locals.CONCURRENCY %>;
            console.log(`[UI] Запуск параллельного парсинга: ${concurrency} потока`);
            
            let completed = 0;
            await asyncPool(concurrency, sites, async (site) => {
                // Мы не можем точно предсказать порядок завершения, поэтому просто инкрементируем счетчик
                // Но для статуса [X/Y] будем выводить имя текущей витрины в этом потоке
                const currentIdx = ++completed;
                status.innerText = `Парсинг в ${concurrency} потока [${currentIdx}/${sites.length}]: ${site.name} (v${version})...`;
                
                try {
                    await fetch(`/api/run-showcase/${site.id}`, { 
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ version: version })
                    });
                } catch (e) {
                    console.error(`Ошибка парсинга ${site.name}:`, e);
                }
            });
            
            status.innerText = `Парсинг v${version} успешно завершен! (Обработано ${sites.length} витрин)`;
            status.classList.remove('text-blue-600');
            status.classList.add('text-green-600');
            
            setTimeout(() => {
                alert(`Все витрины обработаны (v${version})!`);
                window.location.reload();
            }, 500);
            
        } catch (e) {
            alert('Ошибка при выполнении парсинга');
            console.error(e);
        } finally {
            btn.disabled = false;
            btn.style.opacity = '1';
        }
    }

    async function updateTopOffers() {
        const period = document.getElementById('periodFilter').value;
        const tableBody = document.getElementById('topOffersTable');
        
        try {
            const response = await fetch(`/api/top-offers/${period}`);
            const data = await response.json();
            
            if (data.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="3" class="px-3 py-8 text-center text-gray-400 text-sm">Нет данных за выбранный период</td></tr>';
                return;
            }
            
            tableBody.innerHTML = data.map(item => `
                <tr>
                    <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${item.company_name}</td>
                    <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">${item.avg_pos.toFixed(1)}</td>
                    <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">${item.appearances}</td>
                </tr>
            `).join('');
        } catch (e) {
            console.error('Ошибка при загрузке данных:', e);
            tableBody.innerHTML = '<tr><td colspan="3" class="px-3 py-8 text-center text-red-400 text-sm">Ошибка загрузки данных</td></tr>';
        }
    }

    // Chart Logic
    const chartData = <%- JSON.stringify(chartData) %>;
    
    // Цветовая палитра для линий
    const colors = [
        '#3B82F6', // Blue
        '#10B981', // Emerald
        '#F59E0B', // Amber
        '#EF4444', // Red
        '#8B5CF6'  // Purple
    ];

    // Назначаем цвета датасетам
    if (chartData.datasets) {
        chartData.datasets.forEach((dataset, index) => {
            dataset.borderColor = colors[index % colors.length];
            dataset.backgroundColor = colors[index % colors.length]; // Для легенды
            dataset.fill = false; // Отключаем заливку под графиком для чистоты
            dataset.tension = 0.4;
            dataset.spanGaps = true;
            dataset.borderWidth = 2;
            dataset.pointRadius = 3;
            dataset.pointHoverRadius = 5;
        });
    }

    const ctx = document.getElementById('positionsChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: chartData,
        options: {
            responsive: true,
            interaction: {
                mode: 'index',
                intersect: false,
            },
            plugins: {
                legend: { 
                    display: true,
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        boxWidth: 8
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.parsed.y !== null) {
                                label += context.parsed.y.toFixed(1);
                            }
                            return label;
                        }
                    }
                }
            },
            scales: {
                y: { 
                    reverse: true, // 1 место выше, чем 10
                    beginAtZero: false,
                    title: {
                        display: true,
                        text: 'Позиция'
                    },
                    ticks: { 
                        stepSize: 1 
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>

