                // –ú—ã –Ω–µ –º–æ–∂–µ–º —Ç–æ—á–Ω–æ –ø—Ä–µ–¥—Å–∫–∞–∑–∞—Ç—å –ø–æ—Ä—è–¥–æ–∫ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è, –ø–æ—ç—Ç–æ–º—É –ø—Ä–æ—Å—Ç–æ –∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–∏—Ä—É–µ–º —Å—á–µ—Ç—á–∏–∫
                // –ù–æ –¥–ª—è —Å—Ç–∞—Ç—É—Å–∞ [X/Y] –±—É–¥–µ–º –≤—ã–≤–æ–¥–∏—Ç—å –∏–º—è —Ç–µ–∫—É—â–µ–π –≤–∏—Ç—Ä–∏–Ω—ã –≤ —ç—Ç–æ–º –ø–æ—Ç–æ–∫–µ
                const currentIdx = ++completed;
                status.innerText = `–ü–∞—Ä—Å–∏–Ω–≥ –≤ ${concurrency} –ø–æ—Ç–æ–∫–∞ [${currentIdx}/${sites.length}]: ${site.name} (v${version})...`;
                
                try {
                    await fetch(`/api/run-showcase/${site.id}`, { 
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ version: version })
                    });
                } catch (e) {
                    console.error(`–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ ${site.name}:`, e);
                }
            });
            
            status.innerText = `–ü–∞—Ä—Å–∏–Ω–≥ v${version} —É—Å–ø–µ—à–Ω–æ –∑–∞–≤–µ—Ä—à–µ–Ω! (–û–±—Ä–∞–±–æ—Ç–∞–Ω–æ ${sites.length} –≤–∏—Ç—Ä–∏–Ω)`;
            status.classList.remove('text-blue-600');
            status.classList.add('text-green-600');
            
            setTimeout(() => {
                alert(`–í—Å–µ –≤–∏—Ç—Ä–∏–Ω—ã –æ–±—Ä–∞–±–æ—Ç–∞–Ω—ã (v${version})!`);
                window.location.reload();
            }, 500);
            
        } catch (e) {
            alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –≤—ã–ø–æ–ª–Ω–µ–Ω–∏–∏ –ø–∞—Ä—Å–∏–Ω–≥–∞');
            console.error(e);
        } finally {
            btn.disabled = false;
            btn.style.opacity = '1';
        }
    }

    async function updateTopOffers() {
        const period = document.getElementById('periodFilter').value;
        const tableBody = document.getElementById('topOffersTable');
        
        try {
            const response = await fetch(`/api/top-offers/${period}`);
            const data = await response.json();
            
            if (data.length === 0) {
                tableBody.innerHTML = '<tr><td colspan="3" class="px-3 py-8 text-center text-gray-400 text-sm">–ù–µ—Ç –¥–∞–Ω–Ω—ã—Ö –∑–∞ –≤—ã–±—Ä–∞–Ω–Ω—ã–π –ø–µ—Ä–∏–æ–¥</td></tr>';
                return;
            }
            
            tableBody.innerHTML = data.map(item => `
                <tr>
                    <td class="px-3 py-4 whitespace-nowrap text-sm font-medium text-gray-900">${item.company_name}</td>
                    <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">${item.avg_pos.toFixed(1)}</td>
                    <td class="px-3 py-4 whitespace-nowrap text-sm text-gray-500">${item.appearances}</td>
                </tr>
            `).join('');
        } catch (e) {
            console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ –¥–∞–Ω–Ω—ã—Ö:', e);
            tableBody.innerHTML = '<tr><td colspan="3" class="px-3 py-8 text-center text-red-400 text-sm">–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö</td></tr>';
        }
    }

    // Chart Logic
    const chartData = <%- JSON.stringify(chartData) %>;
    
    // –¶–≤–µ—Ç–æ–≤–∞—è –ø–∞–ª–∏—Ç—Ä–∞ –¥–ª—è –ª–∏–Ω–∏–π
    const colors = [
        '#3B82F6', // Blue
        '#10B981', // Emerald
        '#F59E0B', // Amber
        '#EF4444', // Red
        '#8B5CF6'  // Purple
    ];

    // –ù–∞–∑–Ω–∞—á–∞–µ–º —Ü–≤–µ—Ç–∞ –¥–∞—Ç–∞—Å–µ—Ç–∞–º
    if (chartData.datasets) {
        chartData.datasets.forEach((dataset, index) => {
            dataset.borderColor = colors[index % colors.length];
            dataset.backgroundColor = colors[index % colors.length]; // –î–ª—è –ª–µ–≥–µ–Ω–¥—ã
            dataset.fill = false; // –û—Ç–∫–ª—é—á–∞–µ–º –∑–∞–ª–∏–≤–∫—É –ø–æ–¥ –≥—Ä–∞—Ñ–∏–∫–æ–º –¥–ª—è —á–∏—Å—Ç–æ—Ç—ã
            dataset.tension = 0.4;
            dataset.spanGaps = true;
            dataset.borderWidth = 2;
            dataset.pointRadius = 3;
            dataset.pointHoverRadius = 5;
        });
    }

    const ctx = document.getElementById('positionsChart').getContext('2d');
    new Chart(ctx, {
        type: 'line',
        data: chartData,
        options: {
            responsive: true,
            interaction: {
                mode: 'index',
                intersect: false,
            },
            plugins: {
                legend: { 
                    display: true,
                    position: 'bottom',
                    labels: {
                        usePointStyle: true,
                        boxWidth: 8
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            let label = context.dataset.label || '';
                            if (label) {
                                label += ': ';
                            }
                            if (context.parsed.y !== null) {
                                label += context.parsed.y.toFixed(1);
                            }
                            return label;
                        }
                    }
                }
            },
            scales: {
                y: { 
                    reverse: true, // 1 –º–µ—Å—Ç–æ –≤—ã—à–µ, —á–µ–º 10
                    beginAtZero: false,
                    title: {
                        display: true,
                        text: '–ü–æ–∑–∏—Ü–∏—è'
                    },
                    ticks: { 
                        stepSize: 1 
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
</script>

