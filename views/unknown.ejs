<%- include('partials/header') %>

<main class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="md:flex md:items-center md:justify-between mb-8">
        <div class="flex-1 min-w-0">
            <h2 class="text-3xl font-bold leading-7 text-manus-text sm:text-4xl sm:truncate">
                Неизвестные названия
            </h2>
            <p class="mt-1 text-sm text-gray-500">
                Офферы, которые парсер v3.0 нашел, но не смог сопоставить с базой брендов.
            </p>
        </div>
        <div class="mt-4 flex md:mt-0 md:ml-4">
            <a href="/" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-all">
                Назад на дашборд
            </a>
        </div>
    </div>

    <div class="bg-white shadow rounded-lg border border-gray-100 overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Сырое название / Ссылка</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Витрина</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Поз.</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                </tr>
            </thead>
            <tbody id="unknownBrandsList" class="bg-white divide-y divide-gray-200">
                <!-- Data will be loaded here via JS -->
                <tr>
                    <td colspan="5" class="px-6 py-12 text-center text-gray-400 italic">Загрузка данных...</td>
                </tr>
            </tbody>
        </table>
    </div>
</main>

<script>
async function loadUnknownBrands() {
    try {
        const res = await fetch('/api/unknown-brands');
        const data = await res.json();
        const container = document.getElementById('unknownBrandsList');
        
        if (data.length === 0) {
            container.innerHTML = `<tr><td colspan="5" class="px-6 py-12 text-center text-gray-400">Список пуст. Все офферы распознаны! ✨</td></tr>`;
            return;
        }

        container.innerHTML = data.map(item => `
            <tr class="hover:bg-gray-50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap text-xs text-gray-500">
                    ${new Date(item.captured_at).toLocaleString('ru-RU')}
                </td>
                <td class="px-6 py-4">
                    <div class="text-sm font-bold text-gray-900">${item.raw_name || 'Без названия'}</div>
                    <div class="text-[10px] text-gray-400 truncate max-w-xs">
                        <a href="${item.link}" target="_blank" class="hover:text-blue-600 underline">${item.link}</a>
                    </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900">${item.showcase_name}</div>
                    <div class="text-[10px] text-gray-400">${item.showcase_url}</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    #${item.position}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <button onclick="deleteUnknown(${item.id})" class="text-red-500 hover:text-red-700 transition-colors">
                        Удалить
                    </button>
                </td>
            </tr>
        `).join('');
    } catch (e) {
        console.error(e);
    }
}

async function deleteUnknown(id) {
    if (!confirm('Удалить эту запись?')) return;
    try {
        await fetch(`/api/unknown-brands/delete/${id}`, { method: 'POST' });
        loadUnknownBrands();
    } catch (e) {
        alert('Ошибка при удалении');
    }
}

document.addEventListener('DOMContentLoaded', loadUnknownBrands);
</script>

</body>
</html>
